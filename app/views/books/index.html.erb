<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

  </tbody>
</table>
<h2>New book</h2>
<%= form_with model: @book, url: "/books", method: :post  do |f| %>
  <div class="field">
    <label for ="book_title">Title</label>
    <p><%= f.text_field :title %></P>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <p><%= f.text_area :body %></p>
  </div>
  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>
<% end %>